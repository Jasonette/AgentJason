{
  "$jason": {
    "head": {
      "title": "Event Demo",
      "description": "Agents automatically trigger $agent.ready when they've loaded",
      "agents": {
        "007": {
          "url": "https://jasonette.github.io/AgentJason/events/007.html"
        }
      },
      "actions": {
        "$load": {
          "type": "$util.banner",
          "options": {
            "title": "Ready",
            "description": "{{$jason.id}}"
          },
          "success": {
            "type": "$agent.request",
            "options": {
              "id": "007",
              "method": "whatsyourname"
            },
            "success": {
              "type": "$util.alert",
              "options": {
                "title": "{{$jason.lastname}}.",
                "description": "{{$jason.firstname}} {{$jason.lastname}}."
              }
            }
          }
        }
      }
    },
    "body": {
      "header": {
        "title": "$agent.ready event trigger demo"
      },
      "sections": []
    }
  }
}
